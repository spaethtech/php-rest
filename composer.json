{
    "name": "spaethtech/php-rest",
    "description": "A simple REST Client library for interfacing with generic REST Endpoints.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Ryan Spaeth",
            "email": "rspaeth@spaethtech.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-curl": "*",
        "ext-json": "*",
        "spaethtech/php-annotations": "*",
        "spaethtech/php-collections": "*",
        "spaethtech/php-dynamics": "*",
        "spaethtech/php-support": "*",

        "guzzlehttp/guzzle": "~6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~9",
        "vlucas/phpdotenv": "^2.5"
    },
    "autoload": {
        "psr-4": {
            "SpaethTech\\": "./src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SpaethTech\\": "./tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
